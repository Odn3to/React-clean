{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "dom",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "ignorePatterns": [".eslintrc.js"],
    "exclude": [
        "cypress"
      ],
    "include": [
        "./.eslintrc.js",
        "**/*.cy.ts",
        "src"
    ]
}